pipeline {
  agent any
  stages { 
        stage('deploy eureka'){
          steps{
            dir('eurekaserver'){
                sh 'mvn package'
                sh 'cp target/eureka.war /deploy'
            }
          }
        },
        stage('deploy tourists') {
            steps{
              dir('TouristService'){
                sh 'mvn package'
                sh 'cp target/tourists.war /deploy'
              }
            }
        }
    }
}
